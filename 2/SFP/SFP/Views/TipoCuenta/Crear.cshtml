
@model TipoCuenta
@{ 
    ViewData["Tilte"] = "Crear Tipo Cuenta";
}
<h1>Crear Tipo Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas. <br />
    Ejemplos: Prestamos,tarjetas de credito,etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form  asp-action="Crear">
    <div class="mb-3">
        <!--Asp-for toma el nombre del campo y lo coloca en el label-->>
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>  
    </div>
    <button type="submit" class="btn btn-success" >Enviar</button>
</form>
@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}